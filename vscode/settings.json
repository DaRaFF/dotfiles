// settings.json (this file)
//   vscode -> preferences: open settings (ui or json) to see this file
// defaultSettings.json (not this file)
//   vscode -> preferences: open default settings (json)
{
    "workbench.colorTheme": "One Dark Pro",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    // number of spaces for a tab
    "editor.tabSize": 2,
    "editor.fontSize": 13,
    // insert spaces when pressing tab
    "editor.insertSpaces": true,
    "workbench.sideBar.location": "left",
    "editor.renderControlCharacters": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "markdown.extension.toc.updateOnSave": false,
    "markdown.extension.toc.levels": "1..2",
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.scrollback": 1000000,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "explorer.confirmDragAndDrop": false,
    "redhat.telemetry.enabled": true,
    "editor.tabCompletion": "on",
    "javascript.suggest.completeFunctionCalls": true,
    // implicit check param types in methods defined by JSDoc
    "js/ts.implicitProjectConfig.checkJs": false,
    "tabnine.experimentalAutoImports": true,
    "vs-kubernetes": {
        "vscode-kubernetes.minikube-path.mac": "/Users/DaRaFF/.vs-kubernetes/tools/minikube/darwin-amd64/minikube"
    },
    "editor.inlineSuggest.enabled": true,
    "security.workspace.trust.untrustedFiles": "open",
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "yaml": true
    },
    "editor.guides.indentation": true,
    "workbench.editor.enablePreview": false,
    "arduino.useArduinoCli": true,
	"search.exclude": {
		"**/bower_components": true,
		"**/*.code-search": true
    },
    "editor.inlineSuggest.suppressSuggestions": true,
    "editor.inlineSuggest.showToolbar": "always",
    "githubPullRequests.pullBranch": "never",
    "window.zoomLevel": -1,
    "github.copilot.editor.enableAutoCompletions": true,
    "editor.multiCursorModifier": "ctrlCmd"
}